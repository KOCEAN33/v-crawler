{
    "extends": "@apify/tsconfig",
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "node",
        "target": "ES2022",
        "outDir": "dist",
        "noUnusedLocals": false,
        "lib": ["DOM"],
        "noImplicitAny": false,
        "resolve" : {
            "extensions" : [".ts", ".js"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}
